{
  "name": "Tab Capture",
  "description": "Report visual bugs directly into your existing issue tracking tool like Trello.",
  "version": "1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://code.jquery.com https://trello.com 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["build/backgroundScript.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "options_ui": {
    "page": "index.html#/login",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "activeTab",
    "identity",
    "*://*.trello.com/"
  ]
}
