{
  "name": "Tab Capture",
  "description": "Report visual bugs directly into your existing issue tracking tool like Trello.",
  "version": "1",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://code.jquery.com https://trello.com 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["assets/js/eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/16.png",
      "48": "assets/img/48.png",
      "128": "assets/img/128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "activeTab",
    "identity",
    "*://*.trello.com/"
  ]
}
